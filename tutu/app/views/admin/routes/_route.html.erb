<tr>
  <td><%= route.name %></td>
  <td>
    <div class="btn-group" role="group" aria-label="...">
      <%= link_to t('common.actions.show'), [:admin, route],
                  class: 'btn btn-default' %>
      <%= link_to t('common.actions.edit'), edit_admin_route_path(route),
                  class: 'btn btn-default' %>
      <%= link_to t('common.actions.delete'), [:admin, route],
                  class: 'btn btn-default', method: :delete,
                  data: { confirm: t('common.are_you_sure') } %>
    </div>
  </td>
</tr>