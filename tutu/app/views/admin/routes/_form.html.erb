<div class="row">
  <div class="col-lg-6 col-md-8 col-sm-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= header %></h4>
      </div>
      <div class="panel-body">
        <%= form_for([:admin, @route]) do |f| %>
          <%= render 'common/errors', resource: @route %>

          <div class="form-group">
            <%= f.label :stations, t('.stations'), class: 'control-label' %>
            <%= f.collection_select :station_ids, RailwayStation.all, :id, :title,
                                    {}, { multiple: true, class: 'form-control' } %>
          </div>

          <div class="actions">
            <%= f.submit t('.submit', action: action_for(@route)),
                         class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
