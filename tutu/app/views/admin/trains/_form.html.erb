<div class="row">
  <div class="col-lg-6 col-md-8 col-sm-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= header %></h4>
      </div>
      <div class="panel-body">
        <%= form_for([:admin, @train]) do |f| %>
          <%= render 'common/errors', resource: @train %>

          <div class="form-group">
            <%= f.label :number, class: 'control-label' %>
            <%= f.text_field :number, class: 'form-control' %>
          </div>

          <div class="field form-group">
            <div class="checkbox-inline">
              <%= f.check_box :inverse_wagons_order %>
              <%= f.label :inverse_wagons_order %><br>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :route, class: 'control-label' %>
            <%= f.collection_select :route_id, Route.all, :id, :name, {},
                                    class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :current_station, class: 'control-label' %>
            <%= f.collection_select :railway_station_id, RailwayStation.all, :id, :title,
                                    {}, class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit t('.submit', action: action_for(@train)),
                         class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>