<%= javascript_include_tag 'wagons_form' %>

<div class="row">
  <div class="col-lg-6 col-md-8 col-sm-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= header %></h4>
      </div>
      <div class="panel-body">
        <%= form_for([:admin, @train, @wagon.generalize]) do |f| %>
          <%= render 'common/errors', resource: @wagon %>

          <div class="form-group">
            <%= f.label :type, class: 'control-label' %><br>
            <%= f.collection_select :type, Wagon::TYPES, :first, :last, {},
                                    class: 'form-control' %>
          </div>

          <div class="form-group" id='top_seats_field'>
            <%= f.label :top_seats, class: 'control-label' %><br>
            <%= f.text_field :top_seats, class: 'form-control' %>
          </div>

          <div class="form-group" id='bottom_seats_field'>
            <%= f.label :bottom_seats, class: 'control-label' %><br>
            <%= f.text_field :bottom_seats, class: 'form-control' %>
          </div>

          <div class="form-group" id='side_top_seats_field'>
            <%= f.label :side_top_seats, class: 'control-label' %><br>
            <%= f.text_field :side_top_seats, class: 'form-control' %>
          </div>

          <div class="form-group" id='side_bottom_seats_field'>
            <%= f.label :side_bottom_seats, class: 'control-label' %><br>
            <%= f.text_field :side_bottom_seats, class: 'form-control' %>
          </div>

          <div class="form-group" id='sitting_seats_field'>
            <%= f.label :sitting_seats, class: 'control-label' %><br>
            <%= f.text_field :sitting_seats, class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit t('.submit', action: action_for(@wagon)),
                         class: 'btn btn-primary'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
