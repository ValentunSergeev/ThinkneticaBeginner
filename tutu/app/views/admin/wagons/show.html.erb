<%= render 'common/back', path: admin_wagons_path %>

<div class="row">
  <div class="col-lg-6 col-md-8 col-sm-10">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h4><%= t('.header', number: @wagon.number) %></h4>
      </div>

      <div class="panel-body">
        <h4><%= t('.seats') %></h4>
      </div>

      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <td><%= t('.type') %></td>
          <td><%= t('.count') %></td>
        </tr>
        </thead>
        <tbody>
        <% @wagon.exist_seats.each do |type, count| %>
          <tr>
            <td><%= type %></td>
            <td><%= count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="panel-footer">
        <div class="btn-group" role="group" aria-label="...">
          <%= link_to t('common.actions.edit'), edit_admin_wagon_path(@wagon.generalize),
                      class: 'btn btn-default' %>
          <%= link_to t('common.actions.delete'), [:admin, @wagon.generalize],
                      class: 'btn btn-default', method: :delete,
                      data:  { confirm: t('common.are_you_sure') } %>
        </div>
      </div>
    </div>
  </div>
</div>