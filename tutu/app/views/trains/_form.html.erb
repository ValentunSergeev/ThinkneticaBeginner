<%= form_for(train) do |f| %>
  <%= render 'common/errors', resourse: train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :route, 'Select route' %>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>


  <div class="field">
    <%= f.label :current_station, 'Select station' %>
    <%= f.collection_select :railway_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
