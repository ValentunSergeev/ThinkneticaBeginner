<!DOCTYPE html>
<html>
<head>
  <title>Tutu</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<p id="notice" class="notice"><%= notice %></p>
<p id="alert" class="alert"><%= alert %></p>
<p>
  <% if user_signed_in? %>
    <%="#{t('common.accaunt')}: " + current_user.email %>
    <%= link_to t('tickets.my'), search_path %>
    <%= link_to t('tickets.search'), tickets_path %>
    <%= link_to t('common.actions.logut'),
                destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to t('common.actions.login'), new_user_session_path %>
    <%= link_to t('common.actions.signup'), new_user_registration_path %>
  <% end %>
</p>

<%= yield %>

<div class="footer"><%= t('common.footer') %></div>
</body>
</html>
