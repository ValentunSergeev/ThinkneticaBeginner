<%= form_for(@route) do |f| %>
  <%= render 'common/errors', resourse: @route %>

  <div class="field">
    <%= f.label :stations, 'Select stations' %>
    <%= f.collection_select :station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
