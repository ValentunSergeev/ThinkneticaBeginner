<p id="notice"><%= notice %></p>

<strong>Title:</strong>
<%= @route.name %><br>

<strong>Stations:</strong>
<ul>
  <% @route.stations.each do |station| %>
    <li><%= station.title %></li>
  <% end %>
</ul>

<strong>Trains:</strong>
<ul>
  <% @route.trains.each do |train| %>
    <li><%= train.number %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
