<%= form_for([@train, @ticket]) do |f| %>
  <%= render 'common/errors', resource: @ticket %>

  <%= f.hidden_field :start_station_id,
                     value: params[:start_station_id] || @start_station_id %>
  <%= f.hidden_field :end_station_id,
                     value: params[:end_station_id] || @end_station_id %>

  <div class="form-group">
    <%= f.label :full_name, class: 'control-label' %>
    <%= f.text_field :full_name, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit  t('.submit', action: action_for(@ticket)) %>
  </div>
<% end %>
