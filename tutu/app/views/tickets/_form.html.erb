<%= form_for([@train, @ticket]) do |f| %>
  <%= render 'common/errors', resourse: @ticket %>

  <%= f.hidden_field :start_station_id, value: params[:start_station_id] %>
  <%= f.hidden_field :end_station_id, value: params[:end_station_id] %>

  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>

  <div class="actions">
    <%= f.submit  t('.submit', action: action_for(@ticket)) %>
  </div>
<% end %>
